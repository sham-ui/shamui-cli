{
  "name": "{{ name }}",
  "description": "{{ description }}",
  "author": "{{ author }}",
  "main": "index.js",
  "version": "0.0.1",
  "scripts": {
    "start": "node demo-app/server.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build": "webpack --mode=production --progress",
    "prepublish": "yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-modules-umd": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "css-loader": "~1.0.0",
    "eslint": "^5.4.0",
    "eslint-plugin-html": "^5.0.5",
    "eslint-plugin-jest": "^21.21.0",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest": "^23.5.0",
    "jest-runner-eslint": "^0.7.3",
    "node-sass": "^4.9.3",
    "sass-loader": "~7.1.0",
    "sham-ui-jest-preprocessor": "^3.0.0",
    "sham-ui-templates": "^3.2.0",
    "sham-ui-templates-loader": "^3.0.0",
    "sham-ui-test-helpers": "^3.0.0",
    "style-loader": "~0.22.1",
    "webpack": "~4.11.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "~3.1.3",
    "webpack-hot-middleware": "^2.22.3"
  },
  "dependencies": {
    "sham-ui": "^3.1.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose" : true
        }
      ],
      "@babel/plugin-transform-modules-umd",
      "@babel/plugin-proposal-function-bind",
      [
        "@babel/plugin-proposal-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "moduleFileExtensions": [
          "js",
          "json",
          "sfc"
        ],
        "transform": {
          "^.+\\.sht$": "sham-ui-jest-preprocessor",
          "^.+\\.sfc$": "sham-ui-jest-preprocessor",
          "^.+\\.js$": "babel-jest"
        },
        "collectCoverageFrom": [
          "src/**/*.js"
        ],
        "coveragePathIgnorePatterns": [
          "^.+\\.sht$"
        ],
        "testPathIgnorePatterns": [
          "<rootDir>/node_modules/",
          "<rootDir>/__tests__/setup-jest.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup-jest.js",
        "testURL": "http://{{ name }}.example.com"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "moduleFileExtensions": [
          "js",
          "json",
          "sfc"
        ],
        "testMatch": [
          "<rootDir>/src/**/*.*",
          "<rootDir>/__tests__/**/*.js",
          "<rootDir>/__mocks__/**/*.js",
          "<rootDir>/demo-app/**/*.js"
        ]
      }
    ]
  }
}
